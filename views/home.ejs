<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    
    <div class="container">
        <div class="news d-flex justify-content-around align-items-center">
            <div>
                <h4>Perguntas recentes</h4>
                <ul class="mt-3">
                    <% novasPerguntas.forEach(pergunta => { %>
                    <li class="list-link"> <a href='/pergunta/<%=pergunta.id%>'> <%= pergunta.titulo %> </a> </li>
                    <% }) %>
                </ul>
            </div>
            <div>
                <h4>Respostas recentes</h4>
                <ul class="mt-3">
                    <% novasRespostas.forEach(resposta => { %>
                    <li class="list-link"> <a href='/pergunta/<%=resposta .id%>'> <%= resposta .titulo %> </a> </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</body>
<%- include ('partials/footer.ejs') %>
